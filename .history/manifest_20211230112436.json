{
    "name": "Hello, World!",
    "description": "Base Leve Extenson",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "scripts": ["background.js"
    },
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "hello.html",
        "default_icon": "hello_extensions.png"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "MacCtrl+Shift+F"
            },
            "description": "Opens hello.html"
        }
    }
}